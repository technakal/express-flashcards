extends app

block card
  section.flashcards
    .card(class=`card-${side}`)
      .card-header
      h1.card-title= side
      #content
        h2= text
        if side === 'question'
          button#hintButton Show hint
        if hint
          p#hint(style="display: none")
            i Hint: #{hint}
      .card-flip-wrap
        a(href=`${id}?side=${sideToShow}`)
          img.card-flip(src='/static/img/flip.svg')
      .card-next
        a(href="/cards")
          img(src='/static/img/next.svg')
      script(src='/static/js/app.js')
